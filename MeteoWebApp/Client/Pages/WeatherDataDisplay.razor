@inject ILocalStorageService localStorage

<WeatherData @ref="weatherData" />

<p>@temperature</p>
<p>@humidity</p>
<p>@windSpeed</p>
<p>@precipitation</p>

@code {
    WeatherData? weatherData;
    string temperature = "Loading..";
    string humidity = "Loading..";
    string windSpeed = "Loading..";
    string precipitation = "Loading..";
    private string? selectedOption;

    public async Task GetWeatherData(string stationId)
    {
        if (weatherData != null)
        {
            var (temp, hum, ws, prec) = await weatherData.GetWeatherData(stationId);
            temperature = temp;
            humidity = hum;
            windSpeed = ws;
            precipitation = prec;
            StateHasChanged();
        }
    }
}

